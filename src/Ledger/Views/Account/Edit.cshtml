@model Ledger.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Account</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="AcctHolderID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AcctHolderID" class="form-control" />
                <span asp-validation-for="AcctHolderID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AcctNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AcctNumber" class="form-control" />
                <span asp-validation-for="AcctNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AcctType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AcctType" class="form-control"></select>
                <span asp-validation-for="AcctType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Institution" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Institution" class="form-control" />
                <span asp-validation-for="Institution" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Interest" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Interest" class="form-control" />
                <span asp-validation-for="Interest" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Limit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Limit" class="form-control" />
                <span asp-validation-for="Limit" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
